<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.GroupPage"
             Title="GroupPage">
    <StackLayout Margin="10,0,0,0">
        <Label Text="Название группы" />
        <Entry Text="{Binding Title}" WidthRequest="250" HorizontalOptions="Start"/>
        <StackLayout Orientation="Horizontal" Margin="0,30,0,0">
            <Button Text="Сохранить" Clicked="SaveGroup" Margin="0,0,10,0"/>
            <Button Text="Удалить" Clicked="DeleteGroup" Margin="0,0,10,0"/>
            <Button Text="Отмена" Clicked="Cancel" Margin="0,0,10,0"/>
        </StackLayout>
    </StackLayout>
</ContentPage>